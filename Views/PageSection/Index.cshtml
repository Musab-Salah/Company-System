<!DOCTYPE html>
<html>
<head>
    <title>PageSection</title>
    <style>
        p {
            outline-color: #495057;
            height: 100px;
        }
        p.solid {
           /*
            padding-left:10px;
            padding-top:10px;
            border: 1px solid #212529;
              border-radius: 10px;
             */

              display: block;
            width: 550px;
            margin: 0 auto;
            background-color: #CED4DA;
            color: #495057;
            padding: 15px;
            border-radius: 10px;
            border: 2px solid transparent;
            outline: none;
            font-size: 18px;
            
            
               
        }

        .sec {
            padding-right: 400px;
            padding-left: 400px;
        }
        h2{
            text-align: center;
            font-family: Fantasy;
        }
        .add{
            position: absolute;
            right:250px;
            
            
        }

        .button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 2px 5px; 
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 19px;
            transition-duration: 0.4s;
            cursor: pointer;
        }

        .button1 {
            background-color:#CED4DA;
            color: black;
            border: 2px solid #212529;
        }

            .button1:hover {
                background-color: #ADB5BD;
                color: white;
            }

       
        a {
           color:black;
            text-decoration: none;
        }
        .title{
            font-family: "Trebuchet MS", Helvetica, sans-serif;
            font-size:20px;
            display: block;
            margin-bottom:5px;
            padding-left:80px;
        }
       hr {
            border-top: 2px solid #212529;
        }
     

     
    </style>
</head>
<body>
    
    <h2>Page Section</h2>

    <button  class="button button1 add">
        <a  asp-controller="PageSection" asp-action="Create">Add New Section</a>
    </button>

   
    
            
       
            @foreach (var pc in Model)
            {
              

<div class="sec">

            <span class="title">
                @pc.Title
               
                    <button class="button button1"> @Html.ActionLink("Edit","Edit",new {Id=pc.Id}) </button>
                <button class="button button1">  @Html.ActionLink("Delete","Delete",new {Id=pc.Id}, new {onclick ="return confirm('Are you sure to delete ?');" })</button>
                
               
                </span>



                    <p class="solid"> @pc.Description</p>

            <hr >
        </div>


    }
       
    

</body>
</html>